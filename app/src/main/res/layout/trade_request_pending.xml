<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:id="@+id/tradelist"
    app:cardBackgroundColor="?attr/cardbackground"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:weightSum="10"
        android:layout_marginTop="16dp"
        android:id="@+id/relativeLayout1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_gravity="left"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/productePic"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@id/productePic"
            android:layout_toRightOf="@id/productePic"
            android:padding="5dp"
            android:text="username"
            android:textSize="17sp"
            android:textStyle="italic"
            android:typeface="serif"
            android:textColor="?attr/textcolor"/>


        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/productePic"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:text="Text message"
            android:textColor="?attr/textcolor" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_gravity="left"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@id/productePic"
            android:id="@+id/productePic2"
            android:layout_marginTop="30dp"/>


        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productePic"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="28dp"
            android:layout_toEndOf="@id/productePic2"
            android:layout_toRightOf="@id/productePic2"
            android:padding="5dp"
            android:text="username"
            android:textSize="17sp"
            android:textStyle="italic"
            android:typeface="serif"
            android:textColor="?attr/textcolor"/>

        <TextView
            android:id="@+id/product_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productePic"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/productePic2"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:text="Text message"
            android:textColor="?attr/textcolor" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:layout_below="@+id/product_price2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/statusLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_price2"
                android:layout_marginTop="12dp"
                android:text="Status"
                android:id="@+id/status"
                android:textStyle="italic"
                android:textColor="?attr/textcolor"
                android:layout_toRightOf="@id/product_price2"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:layout_below="@+id/statusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/orderLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/statusLayout"
                android:layout_marginTop="12dp"
                android:text="Status"
                android:id="@+id/orderType"
                android:textStyle="italic"
                android:textColor="?attr/textcolor"
                android:layout_toRightOf="@id/product_price2"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_below="@id/orderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            >
            <Button
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_check"
                android:text="Approve"
                android:textColor="?attr/textcolor1"
                android:backgroundTint="?attr/backgroundcolor1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_denied"
                android:text="Declined"
                android:gravity="right"
                android:layout_marginLeft="5dp"
                android:textColor="?attr/textcolor1"
                android:backgroundTint="?attr/backgroundcolor1"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>