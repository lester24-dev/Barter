<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- LIgght theme. -->
    <style name="ThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">@color/White</item>
        <item name="textcolor">@color/Black</item>
        <item name="cardbackground">@color/White</item>
        <item name="toolbarbackground">@color/purple_200</item>
        <item name="textcolor1">@color/White</item>
        <item name="backgroundcolor1">@color/purple_200</item>
        <item name="navigationcolor">@color/purple_200</item>
        <item name="btnText">@color/purple_200</item>
        <item name="filedColor">@color/White</item>
        <item name="boxTextColor">@color/black</item>

        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>
        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/Maroon</item>

    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogTheme</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!-- Dark theme. -->
    <style name="ThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">@color/Black</item>
        <item name="textcolor">@color/White</item>
        <item name="textcolor1">@color/White</item>
        <item name="cardbackground">@color/Gray</item>
        <item name="toolbarbackground">@color/Gray</item>
        <item name="backgroundcolor1">@color/Black</item>
        <item name="navigationcolor">@color/Gray</item>
        <item name="btnText">@color/black</item>
        <item name="filedColor">@color/Gray</item>
        <item name="boxTextColor">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <!--  It should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>

        <!--  For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/red</item>

    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>